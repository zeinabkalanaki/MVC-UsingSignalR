@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container text-left">
    <div class="row">
        <div class="col-lg-4">
            <ul id="ConnectionList" class="mt-3"></ul>
        </div>
        <div class="col-lg-8 mx-auto mt-3">
            <div class="rounded border p-3">
                <div class="form-group">
                    <label for="userInput">Name: </label>
                    <input type="text" class="form-control" id="userInput">
                </div>
                <div class="form-group">
                    <label for="messageInput">Message:</label>
                    <input type="text" class="form-control" id="messageInput">
                </div>
                <button type="button" id="sendButton" class="btn btn-success btn-block">Send</button>
                <button type="button" id="sendToMe" class="btn btn-success btn-block">Send private</button>
            </div>
            <h3 class="my-3"></h3>
            <ul id="messagesList" class="mt-3"></ul>
        </div>
    </div>

</div>
<script src="~/SignalR/signalr.js"></script>
<script src="~/chatclient.js"></script>